<div class="mt-4">
    <h3>My Courses</h3>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Level</th>
                <th scope="col">Description</th>
                <th></th>
                <th></th>

            </tr>
        </thead>

        <tbody>
            {{#each courses}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.level}}</td>
                    <td>{{this.description}}</td>
                    <td><a href="/courses/{{this._id}}/edit" class="btn btn-outline-primary">Update</a></td>
                    <td><a href="#" class="btn btn-outline-danger">Delete</a></td>
                    
                </tr>

            {{/each}}
        </tbody>

    </table>
</div>