<div class="mt-4 ml-4 mr-4">
    <h2>Create new Course</h2>

    <form method='POST' action='/courses/store'>
        <div class="form-group">
            <label for="inputName">Name of the course</label>
            <input type="text" name='name' class="form-control" id="inputName" aria-describedby="nameHelp"
                placeholder="Enter name">
            <small id="nameHelp" class="form-text text-muted">This is the title of your course</small>
        </div>
        <div class="form-group">
            <label for="inputDescription">Description</label>
            <input type="text" name='description' class="form-control" id="inputDescription" aria-describedby="desciptionHelp"
                placeholder="Enter desctiption">
            <small id="desciptionHelp" class="form-text text-muted">Descript more information about your course</small>
        </div>
        <div class="form-group">
            <label for="inputVideoID">Video ID</label>
            <input type="text" name='videoID' class="form-control" id="inputVideoID" aria-describedby="idHelp"
                placeholder="Enter video ID">
            <small id="idHelp" class="form-text text-muted">input the ID of the video that will be play</small>
        </div>

        <div class="form-group">
            <label for="level">Select level</label>
            <select name="level" class="form-control" id="level">
                <option name="Basic" value="Basic">Basic</option>
                <option name="Intermediate" value="Intermediate">Intermediate</option>
                <option name="Advanced" value="Advanced">Advanced</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Create now</button>
    </form>

</div>